<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuadraticActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/salve_q"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="6dp"
        android:layout_marginStart="9dp"
        android:onClick="onButton1Click"
        android:text="SOLVE"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/answer_q"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/answer_q" />

    <Button
        android:id="@+id/salve_biq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="14dp"
        android:layout_marginStart="1dp"
        android:onClick="onButton2Click"
        android:text="SOLVE"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toStartOf="@+id/answer_biq"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/answer_biq" />

    <EditText
        android:id="@+id/enter_b"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="b"
        android:inputType="number|numberSigned|numberDecimal"
        android:minHeight="48dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/enter_c"
        app:layout_constraintStart_toEndOf="@+id/enter_a"
        app:layout_constraintTop_toBottomOf="@+id/dis3_1" />

    <EditText
        android:id="@+id/enter_a"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="43dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="43dp"
        android:layout_marginStart="42dp"
        android:ems="10"
        android:hint="a"
        android:inputType="number|numberSigned|numberDecimal"
        android:minHeight="48dp"
        android:textAlignment="center"
        app:layout_constraintBaseline_toBaselineOf="@+id/enter_b"
        app:layout_constraintEnd_toStartOf="@+id/enter_b"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/enter_c"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="47dp"
        android:layout_marginRight="47dp"
        android:ems="10"
        android:hint="c"
        android:inputType="number|numberSigned|numberDecimal"
        android:minHeight="48dp"
        android:textAlignment="center"
        app:layout_constraintBaseline_toBaselineOf="@+id/enter_b"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/enter_b" />

    <EditText
        android:id="@+id/answer_q"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginTop="283dp"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/salve_q"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/enter_biq_a"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="43dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="43dp"
        android:layout_marginStart="42dp"
        android:ems="10"
        android:hint="a"
        android:inputType="number|numberSigned|numberDecimal"
        android:minHeight="48dp"
        android:textAlignment="center"
        app:layout_constraintBaseline_toBaselineOf="@+id/enter_biq_b"
        app:layout_constraintEnd_toStartOf="@+id/enter_biq_b"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/enter_biq_b"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="53dp"
        android:layout_marginRight="53dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="b"
        android:inputType="number|numberSigned|numberDecimal"
        android:minHeight="48dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/enter_biq_c"
        app:layout_constraintStart_toEndOf="@+id/enter_biq_a"
        app:layout_constraintTop_toBottomOf="@+id/dis3_2" />

    <EditText
        android:id="@+id/enter_biq_c"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:ems="10"
        android:hint="c"
        android:inputType="number|numberSigned|numberDecimal"
        android:minHeight="48dp"
        android:textAlignment="center"
        app:layout_constraintBaseline_toBaselineOf="@+id/enter_biq_b"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/enter_biq_b" />

    <EditText
        android:id="@+id/answer_biq"
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:layout_marginBottom="87dp"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/salve_biq"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/dis3_1"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="Solution of a quadratic equation of the form ax^2 + bx + c = 0"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dis3_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="168dp"
        android:layout_marginTop="168dp"
        android:text="Solution of a biquadrate equation of the form ax^4 + bx^2 + c = 0"
        android:textColor="@android:color/black"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/answer_biq"
        app:layout_constraintEnd_toEndOf="@+id/enter_c"
        app:layout_constraintStart_toStartOf="@+id/dis3_1"
        app:layout_constraintTop_toTopOf="@+id/answer_q" />

</android.support.constraint.ConstraintLayout>